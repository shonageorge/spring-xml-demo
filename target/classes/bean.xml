       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="movieA,movieB" class="com.stackroute.spring.bean.Movie" >
        <constructor-arg name="movieName" value="Student of the year"/>
        <constructor-arg name="genre" value="Romantic"/>
        <constructor-arg ref="actor1"/>
        <constructor-arg ref="actor2"/>
        <constructor-arg ref="actor3"/>
    </bean>

    <bean id="actor1" class="com.stackroute.spring.bean.Actor" >
        <constructor-arg name="actorName" value="Siddharth"/>
